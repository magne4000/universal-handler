{
  "name": "@universal-middleware/express",
  "version": "0.1.0",
  "type": "module",
  "description": "Express adapter for universal middlewares",
  "files": [
    "dist"
  ],
  "types": "./config.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "author": "Joël Charles <joel.charles91@gmail.com>",
  "contributors": [
    "Fatih Aygün <cyco130@gmail.com>"
  ],
  "repository": "https://github.com/magne4000/universal-handler",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsup",
    "dev": "tsup --watch",
    "prepack": "pnpm build",
    "test": "vitest run",
    "test:run-hono:node": "tsx tests/entry-hono.ts",
    "test:run-hono:bun": "bun tests/entry-hono.ts",
    "test:run-hono:deno": "deno run --unstable-sloppy-imports -A tests/entry-hono.ts",
    "test:typecheck": "tsc -p tsconfig.json --noEmit",
    "release": "LANG=en_US release-me patch",
    "release:minor": "LANG=en_US release-me minor",
    "release:commit": "LANG=en_US release-me commit"
  },
  "devDependencies": {
    "@brillout/release-me": "^0.3.9",
    "@types/node": "^20.14.10",
    "hono": "^4.4.13",
    "mri": "^1.2.0",
    "rimraf": "^6.0.0",
    "tsup": "^8.1.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vitest": "^2.0.2",
    "wait-port": "^1.1.0",
    "zx": "^8.1.4"
  }
}
